{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    // "baseUrl": "src",
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "dist",
    "keyofStringsOnly": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "/**/__tests__/"
  ]
}