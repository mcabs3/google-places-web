{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "strictNullChecks": true,
    "declaration": true,
    "keyofStringsOnly": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "target": "es6",
    "declarationDir": "dist",
    "types": ["node"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
